# =============================================================================
# Giljepipeline - Frontend (Next.js) Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values.
# Never commit .env.local to version control.
#
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser.
# Variables WITHOUT the prefix are server-side only.
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------

# FastAPI backend URL (REQUIRED for local dev, cloud sets this automatically)
# Local dev: http://localhost:8000
# Cloud: https://your-api.vercel.app (set in Vercel dashboard)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Storage mode - determines where files are uploaded/retrieved
# 'local'  - Use local filesystem (output_frontend/) via FastAPI
# 'blob'   - Use Vercel Blob storage (requires BLOB_READ_WRITE_TOKEN)
# Default: 'local'
NEXT_PUBLIC_STORAGE_MODE=local

# Legacy env var (deprecated - use NEXT_PUBLIC_STORAGE_MODE instead)
# Set to 'true' to use Vercel Blob uploads instead of legacy FormData
# NEXT_PUBLIC_USE_BLOB=false

# -----------------------------------------------------------------------------
# Logging & Debugging
# -----------------------------------------------------------------------------

# Enable debug logging in the browser console (client components).
# "true"  – all client-side log.debug/info/warn/error calls are printed.
# "false" – client logs are suppressed (production default).
NEXT_PUBLIC_DEBUG=false

# Server-side log output mode:
#   "console" – logs go to stdout/stderr (visible in terminal / Vercel logs)
#   "off"     – all server logs suppressed
#   "file"    – treated as "off" (file logging not supported on Vercel)
# Default: "console" in local dev, "off" in production.
LOG_MODE=console

# Minimum severity for server-side logs when LOG_MODE=console.
# "debug" | "info" | "warn" | "error"
# Default: "info"
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Vercel Blob Storage (REQUIRED for v4 cloud deployment)
# -----------------------------------------------------------------------------

# Vercel Blob read/write token - get from Vercel dashboard > Storage > Blob
# This is a SERVER-SIDE variable used by /api/blob/upload route
# Local dev: Leave empty or set to test with Vercel Blob from local machine
#BLOB_READ_WRITE_TOKEN=

# -----------------------------------------------------------------------------
# Local Development Paths (OPTIONAL - used by legacy API routes)
# -----------------------------------------------------------------------------

# Input directory for uploaded files
INPUT_DIR=input

# Output directory for pipeline results
OUTPUT_DIR=output_frontend

# Python virtual environment path (auto-detected if not set)
# VIRTUAL_ENV=/path/to/.venv
